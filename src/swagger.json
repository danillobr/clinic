  "paths": {
    "/clients": {
      "post": {
        "tags": ["Clients"],
        "summary": "Create a client",
        "description": "Create a new client",
        "requestBody": {
          "content":{
            "application/json":{
              "schema":{
                "$ref": "#/definitions/Client"
              }
            }
          }
        },
        "responses": {
          "201":{
            "description": "Created"
          },
          "400":{
            "description": "Client already exists!"
          }
        }
      }
    },
    "/clients/sessions": {
      "post": {
        "tags": ["Clients"],
        "summary": "Authentication client",
        "description": "Authentication client",
        "requestBody": {
          "content": {
            "application/json":{
              "schema":{
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }  
            }
          }
        },
        "responses":{
          "200": {
            "description": "Sucess"
          },
          "400": {
            "description": "Email or password incorrect!"
          }
        }  
      } 
    },"/attendants": {
      "post": {
        "tags": ["Attendants"],
        "summary": "Create a attendant",
        "description": "Create a new attendant",
        "security":[
          {"bearerAuth": []}
        ],
        "requestBody": {
          "content":{
            "application/json":{
              "schema":{
                "$ref": "#/definitions/Attendant"
              }
            }
          }
        },
        "responses": {
          "201":{
            "description": "Created"
          },
          "400":{
            "description": "Attendant already exists!"
          }
        }
      }
    },
    "/attendants/sessions": {
      "post": {
        "tags": ["Attendants"],
        "summary": "Authentication attendant",
        "description": "Authentication attendant",
        "requestBody": {
          "content": {
            "application/json":{
              "schema":{
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string"
                  },
                  "password": {
                    "type": "string"
                  }
                }
              }  
            }
          }
        },
        "responses":{
          "200": {
            "description": "Sucess"
          },
          "400": {
            "description": "Email or password incorrect!"
          }
        }  
      } 
    },
    "/professionals": {
      "post": {
        "tags": ["Attendants"],
        "summary": "Create a professional",
        "description": "Create a new professional",
        "security":[
          {"bearerAuth": []}
        ],
        "requestBody": {
          "content":{
            "application/json":{
              "schema":{
                "$ref": "#/definitions/Professional"
              }
            }
          }
        },
        "responses": {
          "201":{
            "description": "Created"
          },
          "400":{
            "description": "Professional already exists!"
          }
        }
      }
    }
  },
  "definitions":{
    "Client":{
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password":{
          "type": "string"
        },
        "fone": {
          "type": "string"
        },
        "cpf": {
          "type": "string"
        }
      }
    },
    "Attendant":{
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "email": {
          "type": "string"
        },
        "password":{
          "type": "string"
        },
        "role": {
          "type": "string",
          "enum": ["admin", "basic"]
        }
      }
    },
    "Professional":{
      "type": "object",
      "properties": {
        "name": {
          "type": "string"         
        },
        "fone": {
          "type": "string"
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
