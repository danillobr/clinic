{
  "openapi": "3.0.0",
  "info": {
    "title": "Clinic Documentation",
    "description": "This is an API Clinic",
    "version": "1.0.0",
    "contact": {
      "email": "danillorodriguesabreu@gmail.com"
    }
  },
  "paths": {
    "/clients": {
      "post": {
        "tags": ["Clients"],
        "summary": "Create a client",
        "description": "Create a new client",
        "requestBody": {
          "content":{
            "application/json":{
              "schema":{
                "$ref": "#/definitions/Client"
              }
            }
          }
        },
        "responses": {
          "201":{
            "description": "Created"
          },
          "400":{
            "description": "Client already exists!"
          }
        }
      }
    },
    "/clients/sessions": {
      "post": {
        "tags": ["Clients"],
        "summary": "Authentication client",
        "description": "Authentication client",
        "requestBody": {
          "content": {
            "application/json":{
              "schema":{
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "danillo@email.br"
                  },
                  "password": {
                    "type": "string",
                    "example": "uma senha segura"
                  }
                }
              }  
            }
          }
        },
        "responses":{
          "200": {
            "description": "Sucess"
          },
          "400": {
            "description": "Email or password incorrect!"
          }
        }  
      } 
    },"/attendants": {
      "post": {
        "tags": ["Attendants"],
        "summary": "Create a attendant",
        "description": "Create a new attendant",
        "security":[
          {"bearerAuth": []}
        ],
        "requestBody": {
          "content":{
            "application/json":{
              "schema":{
                "$ref": "#/definitions/Attendant"
              }
            }
          }
        },
        "responses": {
          "201":{
            "description": "Created"
          },
          "400":{
            "description": "Attendant already exists!"
          }
        }
      }
    },
    "/attendants/sessions": {
      "post": {
        "tags": ["Attendants"],
        "summary": "Authentication attendant",
        "description": "Authentication attendant",
        "requestBody": {
          "content": {
            "application/json":{
              "schema":{
                "type": "object",
                "properties": {
                  "email": {
                    "type": "string",
                    "example": "admin@atendente.com.br"
                  },
                  "password": {
                    "type": "string",
                    "example": "admin"
                  }
                }
              }  
            }
          }
        },
        "responses":{
          "200": {
            "description": "Sucess"
          },
          "400": {
            "description": "Email or password incorrect!"
          }
        }  
      } 
    },
    "/professionals": {
      "post": {
        "tags": ["Attendants"],
        "summary": "Create a professional",
        "description": "Create a new professional",
        "security":[
          {"bearerAuth": []}
        ],
        "requestBody": {
          "content":{
            "application/json":{
              "schema":{
                "$ref": "#/definitions/Professional"
              }
            }
          }
        },
        "responses": {
          "201":{
            "description": "Created"
          },
          "400":{
            "description": "Professional already exists!"
          }
        }
      }
    },
    "/professionals/list": {
      "get": {
        "tags": [
          "Attendants"
        ],
        "summary": "List all professionals",
        "description": "List all rofessional",
        "security":[
          {"bearerAuth": []}
        ],
        "responses": {
          "200": {
            "description": "Success",
            "content": {
              "application/json": {
                "type": "array",
                "items": {
                  "type": "object",
                  "properties": {
                    "name": {
                      "type": "string"
                    },
                    "fone": {
                      "type": "string"
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/services": {
      "post": {
        "tags": ["Attendants"],
        "summary": "Create a service",
        "description": "Create a new service",
        "security":[
          {"bearerAuth": []}
        ],
        "requestBody": {
          "content":{
            "application/json":{
              "schema":{
                "$ref": "#/definitions/Service"
              }
            }
          }
        },
        "responses": {
          "201":{
            "description": "Created"
          }
        }
      }
    }
  },
  "definitions":{
    "Client":{
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Danillo"
        },
        "email": {
          "type": "string",
          "example": "danillo@email.br"
        },
        "password":{
          "type": "string",
          "example": "uma senha segura"
        },
        "fone": {
          "type": "string",
          "example": "(82) 99999-9999"
        },
        "cpf": {
          "type": "string",
          "example": "111.111.111-11"
        }
      }
    },
    "Attendant":{
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "César"
        },
        "email": {
          "type": "string",
          "example": "cesar@email.br"
        },
        "password":{
          "type": "string",
          "example": "uma senha segura"
        },
        "role": {
          "type": "string",
          "enum": ["admin", "basic"],
          "example": "basic"
        }
      }
    },
    "Professional":{
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "João"       
        },
        "fone": {
          "type": "string",
          "example": "(82) 98888-8888"
        }
      }
    },
    "Service":{
      "type": "object",
      "properties": {
        "name": {
          "type": "string",
          "example": "Restauração"       
        },
        "value": {
          "type": "number",
          "example": "50.99"
        },
        "time": {
          "type": "number",
          "example": "20"         
        },
        "percentage": {
          "type": "number",
          "example": "12"         
        }
      }
    }
  },
  "components": {
    "securitySchemes": {
      "bearerAuth": {
        "type": "http",
        "scheme": "bearer",
        "bearerFormat": "JWT"
      }
    }
  }
}
